package week2

object session {

/**
  def sum(f: Int => Int, a: Int, b: Int) = {
    def loop(a: Int, acc: Int): Int =
      if (a > b) acc
      else loop(a+1, f(a) + acc)
      
    loop(a, 0)
  }
  
  sum((x: Int) => x*x, 3, 5)
*/
	def sum(f: Int => Int)(a: Int, b: Int): Int =
	  if (a > b) 0 else f(a) + sum(f)(a + 1, b)
                                                  //> sum: (f: Int => Int)(a: Int, b: Int)Int
}