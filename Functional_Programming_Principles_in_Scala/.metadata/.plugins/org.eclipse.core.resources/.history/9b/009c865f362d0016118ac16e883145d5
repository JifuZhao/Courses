package recfun

object Main {
  def main(args: Array[String]) {
    println("Pascal's Triangle")
    for (row <- 0 to 10) {
      for (col <- 0 to row)
        print(pascal(col, row) + " ")
      println()
    }
  }

  /**
   * Exercise 1
   */
    def pascal(c: Int, r: Int): Int = {
      if (c == 0 || c == r) 
        1
      else 
        pascal(c - 1, r - 1) + pascal(c, r - 1)
    }
  
  /**
   * Exercise 2
   */
    def balance(chars: List[Char]): Boolean = {
      
      var num: Int = 0
      
      if (chars.isEmpty) 
          throw new java.util.NoSuchElementException()
      
      def update(chars: List[Char]): Boolean = {
        if (chars.tail.isEmpty)
          if (chars.head == ")" && num == 1) true
          else false
        else
          if (chars.head == "(") num = num + 1
          else if (chars.head == ")" && num > 0) num = num - 1
          
          update(chars.tail)
      }
      
      update(chars)
      
      if (num == 0) true
      else false
        
    }
  
