package recfun

object sample {
  
  var num: Int = 0                                //> num  : Int = 0
  var right: Int = 0                              //> right  : Int = 0
  var chars = "a".toList                          //> chars  : List[Char] = List(a)

  if (chars.tail.isEmpty)
    if (chars.head == '(') num = num + 1
    else if (chars.head == ')')
      if (num > 0) num = num - 1
      else right = right + 1
  else
    if (chars.head == '(') num = num + 1
    else if (chars.head == ')')
      if (num > 0) num = num - 1
      else right = right + 1
      
  num                                             //> res0: Int = 0
  right                                           //> res1: Int = 0

