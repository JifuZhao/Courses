package recfun

object sample {
  
  var num: Int = 0                                //> num  : Int = 0
  var right: Int = 0                              //> right  : Int = 0
  var chars = "abc".toList                        //> chars  : List[Char] = List(a, b, c)
  
	def update(chars: List[Char]): Int = {
	  if (chars.tail.isEmpty)
	    if (chars.head == '(') num = num + 1
	    else if (chars.head == ')')
	      if (num > 0) num = num - 1
	      else right = right + 1
	  else
	    if (chars.head == '(') num = num + 1
	    else if (chars.head == ')')
	      if (num > 0) num = num - 1
	      else right = right + 1
	        
	    update(chars.tail)
	  }                                       //> update: (chars: List[Char])Int
  update(chars)                                   //> java.lang.UnsupportedOperationException: tail of empty list
                                                  //| 	at scala.collection.immutable.Nil$.tail(List.scala:422)
                                                  //| 	at scala.collection.immutable.Nil$.tail(List.scala:417)
                                                  //| 	at recfun.sample$$anonfun$main$1.update$1(recfun.sample.scala:10)
                                                  //| 	at recfun.sample$$anonfun$main$1.apply$mcV$sp(recfun.sample.scala:23)
                                                  //| 	at org.scalaide.worksheet.runtime.library.WorksheetSupport$$anonfun$$exe
