package recfun

object sample {
  
  var num: Int = 0
  var right: Int = 0
  var chars = "(ab".toList

  if (chars.tail.isEmpty)
    if (chars.head == '(')
      num = num + 1
      num
    else if (chars.head == ')')
      if (num > 0) num = num - 1
      else right = right + 1
  else
    if (chars.head == '(') num = num + 1
    else if (chars.head == ')')
      if (num > 0) num = num - 1
      else right = right + 1
      
  num
  right

