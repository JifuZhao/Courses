package recfun

object sample {
  
  var chars = "()".toList                         //> chars  : List[Char] = List((, ))

	def balance(chars: List[Char]): Boolean = {
  
	  def update(chars: List[Char], num: Int): Boolean = {
	    var tempNum = 0
	    
	    if (chars.isEmpty)
	      if (num == 0) true
	      else false
	    else
	      if (chars.head == '(') tempNum = num + 1
	      else if (chars.head == ')') tempNum = num - 1
	      else tempNum = num
	      
	      if (tempNum >= 0) update(chars.tail, tempNum)
	      else false
	  }
	  
	  update(chars, 0)

	}                                         //> balance: (chars: List[Char])Boolean
  
  balance(chars)                                  //> java.lang.UnsupportedOperationException: tail of empty list
                                                  //| 	at scala.collection.immutable.Nil$.tail(List.scala:422)
                                                  //| 	at scala.collection.immutable.Nil$.tail(List.scala:417)
                                                  //| 	at recfun.sample$$anonfun$main$1.update$1(recfun.sample.scala:20)
                                                  //| 	at recfun.sample$$anonfun$main$1.balance$1(recfun.sample.scala:24)
                                                  //| 	at recfun.sample$$anonfun$main$1.apply$mcV$sp(recfun.sample.scala:28)
                                                  //| 	at org.scalaide.worksheet.runtime.library.WorksheetSupport$$anonfun$$exe
